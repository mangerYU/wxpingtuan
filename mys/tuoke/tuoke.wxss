.page {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background-color: #F6EEF1;
}

button[type=primary] {
  background-color: #fff;
  border: none;
}
button::after{
  border: none;
}
.top {
  width: 100%;
  height:450rpx;
  background-position: center;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  display: flex;
  flex-direction: column;
  align-items: center;

}

.activity_title {
  width: 100%;
  height: 50rpx;
  color: #fff;
  font-size: 40rpx;
  padding: 50rpx 0rpx 30rpx 0rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.item {
  width: 100%;
  height:200rpx;
  margin-top:40%;
  background-position: center;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.member {
  width:80%;
  height:300rpx;
  padding: 20rpx;
  background-position: center;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left:7%;
  margin-top:5%;
}

.text_tit {
  color: #fff;
  font-size: 25rpx;
  margin-top: 5%;
  position: absolute;
  left: 42%;
}
.text_tit2 {
  color: #999;
  font-size: 35rpx;
  margin-left: 15%;
  margin-top: 8%;
}

.member .member_hd {
  text-align: center;
}

.member .limit {
  color: #ff5778;
}

.member .member_hd .member_item {
  width: 110rpx;
  height: 110rpx;
  padding-bottom: 20rpx;
  margin:20rpx 40rpx;
  position: relative;
  display: inline-block;
  vertical-align: top;
}

.member .member_hd .member_item>image {
  width: 110rpx;
  height: 110rpx;
  display: block;
  box-sizing: border-box;
  border-radius: 100%;
}

.member .member_hd .member_item>view:nth-child(1) {
  width: 100rpx;
  height: 100rpx;
  box-sizing: border-box;
  background: #f6f6f6;
  border-radius: 100%;
  font-size: 8vw;
  color: #fbb2bd;
  display: flex;
  justify-content: center;
  align-items: center;
}

.member .member_hd .member_item>view:nth-child(2) {
  position: absolute;
  left: 50%;
  transform: translate(-50%);
  width: 80rpx;
  font-size: 3vw;
  border-radius: 40rpx;
  color: #504E4A;
  text-align: center;
}

.member.fail {
  background: #dbdbdb;
}

.member.fail .member_hd .member_item>image {
  border: #a3a3a3 2rpx solid;
}

.member.fail .member_hd .member_item>view:nth-child(1) {
  border-color: #a3a3a3;
  color: #a3a3a3;
}

.member.fail .member_hd .member_item>view:nth-child(2) {
  background: #a3a3a3;
}

.menu {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  z-index: 999;
  font-size: 4vw;
  line-height: 5vw;
}

.menu_close {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  z-index: 99999;
}

.menu .menu_top {
  padding: 80rpx 20rpx 0;
  position: relative;
}

.menu .menu_top>image {
  width: 200rpx;
  height: 200rpx;
  box-sizing: border-box;
  border: #fff 5rpx solid;
  border-radius: 10rpx;
  position: absolute;
  top: -40rpx;
}

.menu .menu_top>view {
  padding-left: 220rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.menu .menu_top>view:nth-child(3) {
  color: #f2473d;
}

.menu .menu_top>view:nth-child(4) {
  color: #999999;
  font-size: 3.5vw;
}

.menu .menu_content {
  padding: 20rpx 0;
  margin: 20rpx 20rpx 0;
  border-top: #ddd 2rpx solid;
  border-bottom: #ddd 2rpx solid;
  display: flex;
  align-items: center;
}

.menu .menu_content>view:nth-child(1) {
  flex: 1;
}

.menu .menu_content .num {
  text-align: right;
  display: flex;
  background: #f4f4f4;
  border-radius: 40rpx;
}

.menu .menu_content .num>view {
  padding: 10rpx 20rpx;
}

.menu .menu_btn {
  text-align: center;
  color: #fff;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
}

.menu .menu_btn image {
  width: 40rpx;
  height: 40rpx;
  padding: 0 40rpx;
}

.menu .menu_btn>view:nth-child(2) {
  background: #e64240;
  flex: 1;
  padding: 30rpx 20rpx;
}

.butt {
  width:70%;
  height: 100rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius:50rpx;
  font-weight: 500;
  color: #666666;
  box-shadow: 0rpx 10rpx 10rpx #999;
  background:linear-gradient(to bottom,#E4D9C6, #D1B88A);
  margin-top:2%;

}

.show {
  display: block;
}

.hide {
  display: none;
}

.zhezhao {
  width: 100%;
  height: 100%;
  position: fixed;
  background-color: rgba(0, 0, 0, 5);
  filter: alpha(opacity=20);
  background: rgba(60, 62, 66, 0.5);
  top: 0;
  left: 0;
  z-index: 999;
}

.zhecont {
  width: 100%;
  height: 600rpx;
  position: absolute;
  top: 20%;
